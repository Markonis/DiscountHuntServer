<p id="notice"><%= notice %></p>

<h1>Listing Discounts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Category</th>
      <th>Votes</th>
      <th>Price</th>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discounts.each do |discount| %>
      <tr>
        <td><%= discount.title %></td>
        <td><%= discount.description %></td>
        <td><%= discount.category %></td>
        <td><%= discount.votes %></td>
        <td><%= discount.price %></td>
        <td><%= discount.user %></td>
        <td><%= discount.location %></td>
        <td><%= link_to 'Show', discount %></td>
        <td><%= link_to 'Edit', edit_discount_path(discount) %></td>
        <td><%= link_to 'Destroy', discount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

